{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "stripInternal": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "paths": {
      "@controller/*": ["./src/1-controller/*"],
      "@service/*": ["./src/2-service/*"],
      "@repository/*": ["./src/3-repository/*"],
      "@model/*": ["./src/4-model/*"],
      "@infrastructure/*": ["./src/5-infrastructure/*"],
      "@shared/*": ["./src/6-shared/*"]
    }
  }
}
